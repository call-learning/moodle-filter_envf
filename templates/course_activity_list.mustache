{{!
  @template filter_envf/course_activity_list

  Example context (json):
  {
      "notenrolled": true,
      "coursefullname": "Course fullname",
      "activity": [
        {
            "name" : "Display name of the activity",
            "url": "url to the activity",
            "isdisabled": true,
            "iscompleted": true,
            "actionbutton": {
                "label": "The button label",
                "url": "The button URL",
                "isdonwload": true
            }
        }
      ]
  }
}}

<div class="course_activity_list">
    {{#notenrolled}}
        <div class="alert-warning">{{#str}}notenrolledincourse, filter_envf,  {{ coursefullname }}{{/str}}</div>
    {{/notenrolled}}
    {{^notenrolled}}
        <ul class="coursecompletion-act-list">
        {{#activities}}
            <li class="{{#iscompleted}}status-completed{{/iscompleted}}">
                {{#url}}<a class="{{#isdisabled}}disabled{{/isdisabled}}" href="{{url}}">{{{name}}}</a>{{/url}}
                {{^url}}{{{name}}}{{/url}}
                {{#actionbutton}}
                    <div class="coursecompletion-action-button px-5 py-3">
                        <a class="btn btn-outline-primary" href="{{link}}" {{#isdownload}}download="true"{{/isdownload}}>{{label}}</a>
                    </div>
                {{/actionbutton}}
            </li>
        {{/activities}}
        </ul>
    {{/notenrolled}}
</div>